{% extends 'base.html.twig' %}

{% block title %}Погода{% endblock %}

{% block body %}
    <h1>Пошук погоди</h1>

    {% if error %}
        <div style="color: red;">{{ error }}</div>
    {% endif %}

    <form method="post" action="{{ path('weather') }}">
        <input type="text" name="city" placeholder="Введіть назву міста" required>
        <button type="submit">Показати</button>
    </form>

    {% if weather %}
        <hr>
        <h2>Погода в {{ weather.city }}, {{ weather.country }}</h2>
        <ul>
            <li>Температура: {{ weather.temperature }}°C</li>
            <li>Стан: {{ weather.condition }}</li>
            <li>Вологість: {{ weather.humidity }}%</li>
            <li>Вітер: {{ weather.windSpeed }} км/год</li>
            <li>Оновлено: {{ weather.lastUpdated }}</li>
        </ul>
    {% endif %}
{% endblock %}
